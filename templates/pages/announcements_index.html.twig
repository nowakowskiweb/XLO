{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('announcements-list/style') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('announcements-list/script') }}
{% endblock %}


{% block title %}Hello AnnouncementController!{% endblock %}

{% block body %}
    {% include '@sections/filters.html.twig' with {
        'filters': announcements.filters,
        'page': announcements.page,
        'categories': categories,
        'conditions': conditions,
        'sorting': sorting } %}
    {% include '@sections/list.html.twig' with {
        'data': announcements,
        'paginationFilters': paginationFilters,
    } %}
{% endblock %}
