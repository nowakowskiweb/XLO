<form action="{{ path('app_register') }}" method="POST" enctype="multipart/form-data">

    <div class="mb-3 form-group">
        <label for="{{ registrationForm.login.vars.id }}" class="form-label">Login</label>
        <input type="text" id="{{ registrationForm.login.vars.id }}" name="{{ registrationForm.login.vars.full_name }}"
               class="form-control" value="{{ registrationForm.login.vars.value }}"/>
        {% if registrationForm.login.vars.errors|length > 0 %}
            {% include 'form/error.html.twig' with {'error': registrationForm.login.vars.errors} %}
        {% endif %}
    </div>
    <div class="mb-3 form-group">
        <label for="{{ registrationForm.firstName.vars.id }}" class="form-label">First name</label>
        <input type="text" id="{{ registrationForm.firstName.vars.id }}"
               name="{{ registrationForm.firstName.vars.full_name }}" class="form-control"
               value="{{ registrationForm.firstName.vars.value }}"/>
        {% if registrationForm.firstName.vars.errors|length > 0 %}
            {% include 'form/error.html.twig' with {'error': registrationForm.firstName.vars.errors} %}
        {% endif %}
    </div>
    <div class="mb-3 form-group">
        <label for="{{ registrationForm.email.vars.id }}" class="form-label">Last name</label>
        <input type="text" id="{{ registrationForm.lastName.vars.id }}"
               name="{{ registrationForm.lastName.vars.full_name }}" class="form-control"
               value="{{ registrationForm.lastName.vars.value }}"/>
        {% if registrationForm.lastName.vars.errors|length > 0 %}
            {% include 'form/error.html.twig' with {'error': registrationForm.lastName.vars.errors} %}
        {% endif %}
    </div>
    <div class="mb-3 form-group">
        <label for="{{ registrationForm.email.vars.id }}" class="form-label">Email</label>
        <input id="{{ registrationForm.email.vars.id }}" name="{{ registrationForm.email.vars.full_name }}"
               class="form-control" value="{{ registrationForm.email.vars.value }}"/>
        {% if registrationForm.email.vars.errors|length > 0 %}
            {% include 'form/error.html.twig' with {'error': registrationForm.email.vars.errors} %}
        {% endif %}
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3 form-group">
        <label for="{{ registrationForm.password.first.vars.id }}" class="form-label">Password</label>
        <input type="password" id="{{ registrationForm.password.first.vars.id }}"
               name="{{ registrationForm.password.first.vars.full_name }}" class="form-control"
               autocomplete="new-password"/>
        {% if registrationForm.password.first.vars.errors|length > 0 %}
            {% include 'form/error.html.twig' with {'error': registrationForm.password.first.vars.errors} %}
        {% endif %}
    </div>
    <div class="mb-3 form-group">
        <label for="{{ registrationForm.password.second.vars.id }}" class="form-label"> {{ registrationForm.password.second.vars.label }}</label>
        <input type="password" id="{{ registrationForm.password.second.vars.id }}"
               name="{{ registrationForm.password.second.vars.full_name }}" class="form-control"
               autocomplete="new-password"/>
        {% if registrationForm.password.second.vars.errors|length > 0 %}
            {% include 'form/error.html.twig' with {'error': registrationForm.password.second.vars.errors} %}
        {% endif %}
    </div>
    <div class="mb-3 form-group">
        <label for="{{ registrationForm.avatar.vars.id }}" class="form-label"> {{ registrationForm.avatar.vars.label }}</label>
        <input type="file" id="{{ registrationForm.avatar.vars.id }}"
               name="{{ registrationForm.avatar.vars.full_name }}" class="form-control"
               autocomplete="new-password"/>
        {% if registrationForm.avatar.vars.errors|length > 0 %}
            {% include 'form/error.html.twig' with {'error': registrationForm.avatar.vars.errors} %}
        {% endif %}
    </div>
    <div class="mb-3 form-group">
        <input type="checkbox" id="{{ registrationForm.agreeTerms.vars.id }}"
               name="{{ registrationForm.agreeTerms.vars.full_name }}" class="my-input-class"/>
        <label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label">Agree to terms</label>
        {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
            {% include 'form/error.html.twig' with {'error': registrationForm.agreeTerms.vars.errors} %}
        {% endif %}
    </div>
    {{ form_row(registrationForm._token) }}

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
